# vim bindings in all the apps via Ctrl (aka Karabiner on MacOS)
alt + h
  xte 'keyup Alt_L' 'keyup h' 'key Left' 'keydown Alt_L'

alt + j
  xte 'keyup Alt_L' 'keyup j' 'key Down' 'keydown Alt_L'

alt + k
  xte 'keyup Alt_L' 'keyup k' 'key Up' 'keydown Alt_L'

alt + l
  xte 'keyup Alt_L' 'keyup l' 'key Right' 'keydown Alt_L'
