general {
	output_format = "i3bar"
        colors = true
        color_good = "#00cc44"
        interval = 2
}
order += "path_exists VPN"
# order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
# order += "battery all"
order += "disk /"
order += "memory"
order += "tztime utc"
order += "tztime London"
order += "tztime local"
volume master {
	format = "VOL %volume"
	format_muted = "VOL MUTE"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
path_exists VPN {
        path = "/proc/sys/net/ipv4/conf/tun0"
}
wireless _first_ {
        format_up = "(%quality at %essid) %ip"
        format_down = "down"
}
ethernet _first_ {
        format_up = "%ip"
        format_down = "down"
}
battery all {
        format = "%status %percentage %remaining %emptytime"
	last_full_capacity = true
	integer_battery_capacity = true
	status_chr = "CHR"
	status_full = "FLL"
	status_bat = "BAT"
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
}
disk "/" {
        format = "DF %avail"
}
load {
        format = "%1min"
}
cpu_usage {
	format = "CPU %usage"
}
memory {
        format = "RAM %used"
#	/ %available"
        threshold_degraded = "2G"
        format_degraded = "MEMORY < %available"
}
tztime local {
        format = " %H:%M:%S %Y-%m-%d, %A"
}
